{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "files": {
    "include": ["src/*.{js,jsx,ts,tsx}"],
    "ignore": ["src/api/generated/", "build/"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  }
}
